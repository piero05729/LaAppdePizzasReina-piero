<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PizzaDeliveryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Pizza Delivery App Theme Colors -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_red_dark</item>
        <item name="colorSecondary">@color/secondary_brown</item>
        <item name="colorSecondaryVariant">@color/secondary_brown_dark</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@color/error_red</item>
    </style>

    <style name="Theme.PizzaDeliveryApp" parent="Base.Theme.PizzaDeliveryApp" />
    
    <!-- Custom Styles for Login Screen -->
    <style name="LoginEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="boxStrokeColor">@color/secondary_brown</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="LoginButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="backgroundTint">@color/primary_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="LoginButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="strokeColor">@color/secondary_brown</item>
        <item name="android:textColor">@color/secondary_brown</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="LoginTextLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>